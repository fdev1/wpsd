DESTDIR=
INSTALL=@INSTALL@
prefix=@prefix@
ICONS_DIR=@datarootdir@/icons
SYSCONFDIR=@sysconfdir@

CC=@CC@
CFLAGS += @CFLAGS@ @DEFS@
CFLAGS += -Wall -DSYSCONFDIR=\"@sysconfdir@\"
EXECUTABLE = upp
DAEMON = uppd
WPSAPI_PROVIDER = libwpsapi_provider.so
SOURCES = uppd.c upp.c utils.c logger.c wpsapi.c
OBJECTS = $(SOURCES:.c=.o)

all: $(SOURCES) $(EXECUTABLE) $(DAEMON) $(WPSAPI_PROVIDER)

$(EXECUTABLE): $(OBJECTS)
	$(CC) -o $@ upp.o

$(DAEMON): $(OBJECTS)
	$(CC) -ldl -o $@ uppd.o utils.o logger.o
	sed -e "s|@PREFIX@|$(prefix)|g" uppd.service.in > uppd.service

$(WPSAPI_PROVIDER): $(OBJECTS)
	$(CC) -shared -ldl -o $@ wpsapi.o

.c.o:
	$(CC) -fPIC $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE) $(DAEMON) $(WPSAPI_PROVIDER)
	rm -f uppd.service

mrproper: clean
	rm -f configure
	rm -fr autom4te.cache
	rm -f config.log
	rm -f config.status
	rm -f Makefile

install:
	$(INSTALL) -d $(DESTDIR)/$(prefix)/bin
	$(INSTALL) -d $(DESTDIR)/usr/lib/systemd/system
	$(INSTALL) -d $(DESTDIR)/$(SYSCONFDIR)
	$(INSTALL) -d $(DESTDIR)/usr/lib/uppd/providers/lib
	$(INSTALL) $(EXECUTABLE) $(DESTDIR)/$(prefix)/bin
	$(INSTALL) $(DAEMON) $(DESTDIR)/$(prefix)/bin
	$(INSTALL) $(WPSAPI_PROVIDER) $(DESTDIR)/usr/lib/uppd/providers
	$(INSTALL) wpsapi/lib/libwpsapi-fedora.so $(DESTDIR)/usr/lib/uppd/providers/lib
	$(INSTALL) wpsapi/lib/libwpsapi-ubuntu.so $(DESTDIR)/usr/lib/uppd/providers/lib
	$(INSTALL) uppd.service $(DESTDIR)/usr/lib/systemd/system
	$(INSTALL) uppd.conf $(DESTDIR)/$(SYSCONFDIR)

uninstall:
	$(RM) $(DESTDIR)/$(prefix)/bin/$(EXECUTABLE)
	$(RM) $(DESTDIR)/$(prefix)/bin/$(DAEMON)
